# ~/.cwmrc

sticky yes
borderwidth 1
fontname "Inconsolata:pixelsize=12"
gap 0 0 0 0

color menubg "#fdf6e3"
color menufg "#eee8d5"
color font "#586e75"
color selfont "#586e75"

color activeborder "#586e75"
color inactiveborder "#c0c0c0"

# Override built-in term command
command term "gnome-terminal"

# Keybindings: commands
bind 4-Return exec
bind 4-t terminal
bind 4-g firefox
bind 4-n nautilus
bind 4-L "xscreensaver-command -lock"

bind 4-comma "mixerctl outputs.master=-5"
bind 4-period "mixerctl outputs.master=+5"

# Keybindings: windows
bind 4-Tab cycle
bind 4-M maximize
bind 4-V vmaximize
bind 4-W delete
bind 4-H hide
bind 4-j cyclegroup
bind 4-k rcyclegroup
bind 4-s search
bind 4-l label

# Keybindings: groups
bind 4-1 grouponly1
bind 4-2 grouponly2
bind 4-3 grouponly3
bind 4-4 grouponly4
bind 4-5 goruponly5
bind S4-1 movetogroup1
bind S4-2 movetogroup2
bind S4-3 movetogroup3
bind S4-4 movetogroup4
bind S4-5 movetogroup5
bind 4-T vtile

mousebind 4-1 window_move
mousebind 4-2 window_resize

autogroup 1 "Navigator,Firefox"
autogroup 1 "Dialog,Firefox"

ignore conky
ignore panel
